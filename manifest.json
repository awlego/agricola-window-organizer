{
    "manifest_version": 3,
    "name": "Agricola Window Organizer",
    "version": "1.0",
    "description": "Organizes Chrome windows when playing Agricola online",
    "permissions": ["tabs", "windows", "storage", "alarms"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }